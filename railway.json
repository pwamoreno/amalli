{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["node"],
      "phases": {
        "setup": {
          "cmds": [
            "cd server && npm install --omit=dev"
          ]
        },
        "build": {
          "cmds": [
            "echo 'Build completed'"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "cd server && npm start",
    "restartPolicyType": "ON_FAILURE"
  }
}